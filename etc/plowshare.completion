    if [[ "$cur" == -* ]]; then
        COMPREPLY=( $( compgen -W '--help --version --quiet \
            -v -q -i --interface  --no-plowsharerc' -- $cur ) )
    else
        # URL pattern expected
        _filedir
    fi
